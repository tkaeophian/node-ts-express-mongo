{
  "name": "ts-express-mongo",
  "version": "1.0.0",
  "description": "A basic start up template for building a node application with combination of Typescript, Express and MongoDB",
  "main": "dist/index.js",
  "scripts": {
    "lint": "eslint --ext .ts src/",
    "format": "prettier --write src/**/*.ts",
    "check-formatting": "prettier --check src/**/*.ts",
    "start": "node dist/src/index.js",
    "dev": "concurrently \"npx tsc --watch\" \"nodemon -q dist/src/index.js\"",
    "build": "npx tsc"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tkaeophian/node-ts-express-mongo.git"
  },
  "author": "Tee Kaeophian",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/tkaeophian/node-ts-express-mongo/issues"
  },
  "homepage": "https://github.com/tkaeophian/node-ts-express-mongo#readme",
  "dependencies": {
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "helmet": "^6.0.1",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^7.0.1"
  },
  "devDependencies": {
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.13",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.4.0",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/node": "^18.15.1",
    "@typescript-eslint/eslint-plugin": "^5.54.1",
    "@typescript-eslint/parser": "^5.54.1",
    "concurrently": "^7.6.0",
    "eslint": "^8.36.0",
    "jest": "^29.5.0",
    "nodemon": "^2.0.21",
    "prettier": "^2.8.4",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  },
  "jest": {
    "preset": "ts-jest",
    "clearMocks": true,
    "coverageDirectory": "../coverage",
    "coverageProvider": "v8",
    "rootDir": "./src",
    "transform": {
      "^.+\\.(ts|tsx)?$": "ts-jest"
    }
  }
}
